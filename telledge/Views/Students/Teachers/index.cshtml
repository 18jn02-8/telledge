@model IEnumerable<telledge.Models.Teacher>

@{
ViewBag.Title = "index";
Layout = "~/Views/Shared/studentMenu.cshtml";
}

<main>
	<table class="table  table-bordered">
		<tr>
			<td>写真</td>
			<td>名前</td>
			<td>性別</td>
			<td>年齢</td>
			<td>言語</td>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					<img class="room-images" src="/uproadFiles/@(item.profileImage)" />
				</td>
				<td>@(item.name)</td>
				<td>
					@{
						String sex = ((telledge.Enums.sex)item.sex).ToString();
						if (sex == "Man")
						{
							sex = "男性";
						}
						else
						{
							sex = "女性";
						}
					}
					@sex
				</td>
				<td>@(item.age)</td>
				<td>@(item.language)</td>
			</tr>
		}
	</table>
</main>