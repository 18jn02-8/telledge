@model telledge.Models.Room

@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<link rel="stylesheet" href="ModalWindow.css">
	<script src="https://cdn.jsdelivr.net/npm/jquery@3/dist/jquery.min.js"></script>
	<script src="main.js"></script>
	<script src="http://localhost:53766/Scripts/jquery-3.3.1.js"></script>

	<script>
		$(function () {
			$('.js-modal-open').on('click', function () {
				$('.js-modal').fadeIn();
				return false;
			});
			$('.js-modal-close').on('click', function () {
				$('.js-modal').fadeOut();
				return false;
			});
		});
	</script>
</head>
<body>
	<div class="content">
		<a class="js-modal-open" href=""></a>
	</div>
	<div class="modal js-modal">
		<div class="modal__bg js-modal-close"></div>
		<div class="modal__content">
			<h3 class="h3-margin-left">休憩時間です!!次の生徒の対応を開始しますか?</h3>
			<div class="div-margin">
				<span>生徒名</span>
				<span>山田</span>
			</div>
			<div class="div-margin">
				<span>要望</span>
				<span>こうしてください。</span>
			</div>
			<div class="div-margin">
				<input class="buttom-margin" type="submit" value="対応不可" id="button-color-red">
				<input class="buttom-margin" type="submit" value="次の生徒へ" id="button-color-Green">
				<a class="js-modal-close" href=""></a>
			</div>
		</div>
	</div>
</body>
</html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<link rel="stylesheet" href="style.css">
	<link rel="stylesheet" href="bootstrap.min.css">
	<script type="text/javascript" src="jquery-3.4.1.min.js"></script>
	<script type="text/javascript" src="bootstrap.min.js"></script>
</head>
<body>
	<main class="clearfix">
		<div id="main-left" class="boxes border float">
			<div id="room-name" class="center">
				<span>@Model.roomName</span>
			</div>
			<div id="room-desc" class="center">
				<span>@Model.description</span>
			</div>
			<div id="room-buttom" class="left-margin">
				<input type="submit" id="submit_button" class="button" name="finishRoom" value="ルーム終了">
			</div>
			<div id="room-detail">
				<table class="left-margin">
					<col span="1" width="200px">
					<tr>
						<td>通話待ち人数</td>
						<td></td>
					</tr>
					<tr>
						<td>通話合計時間</td>
						<td></td>
					</tr>
				</table>
			</div>
			@foreach (var item in Model)
			{
				<div id="room--list">
					<table border="1" class="list-margin">
						<col span="5" width="200px">
						<tr>
							<td>順番</td>
							<td>名前</td>
							<td>要望</td>
							<td>対応不可</td>
						</tr>
						<tr>
							<td>@item.order</td>
							<td>@item.getStudent().name</td>
							<td>@item.request</td>
							<td><input type="submit" class="button-cancel" name="cancel" value="キャンセル"></td>
						</tr>
					</table>
				</div>
			}
		</div>

		<div id="main-right" class="boxes float">
			<div id="call" class="border">
				<table>
					<col span="1" width="150px">
					<tbody>
						<tr>
							<td>生徒名</td>
							<td>@Model.getStudent().name</td>
						</tr>
						<tr>
							<td>残り時間</td>
							<td>@Model.endTime</td>
						</tr>
						<tr>
							<td>最大残り時間</td>
							<td>@Model.endScheduleTime</td>
						</tr>
						<tr>
							<td id="margin-bottom">要望</td>
							<td id="margin-bottom">@Model.request</td>
						</tr>
						<tr>
							<td id="margin-bottomm"><input type="submit" class="button-cancel" name="submit" value="通話終了" /></td>
						</tr>
						<tr>
							<td id="margin-bottommm"><input type="submit" id="button-blacklist" name="submit" value="ブラックリスト"></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
</body>
</html>

