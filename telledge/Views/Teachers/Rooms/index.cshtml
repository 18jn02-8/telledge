@model IEnumerable<telledge.Models.Room>

@{
	Layout = "~/Views/Shared/teacherMenu.cshtml";
}

	

<meta http-equiv="X-UA-Compatible" content="IE=edge">
<link rel="stylesheet" href="~/StyleSheets/TeacherRoomsindex.css">
<link rel="stylesheet" href="~/StyleSheets/common.css">
<main>
	@foreach (var item in Model)
	{
		<div class="room-boxes">
			<h2 class="center">@item.roomName</h2>
			<span class="center">@item.description</span>
			<div class="flex">
			</div>
			<div class="room-detail" class="float">
				<table class="rooms-table">
					<col span="2" width="300px">
					<tbody>
						<tr>
							<td>タグ</td>
							<td>@item.tag</td>
						</tr>
						<tr>
							<td>獲得ポイント数</td>
							<td>@item.point</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	}
</main>

